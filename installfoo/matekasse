server {
    listen 80 default_server;
    listen [::]:80 default_server;
    server_name _;

    location / {
        include proxy_params;
        proxy_pass http://127.0.0.1:8000;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "Upgrade";
        proxy_set_version 1.1;
        proxy_buffering off;
    }
}